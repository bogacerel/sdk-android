<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/cardBrandImageView"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:layout_gravity="left"
        android:src="@drawable/unknown" />

    <TextView
        android:id="@+id/card_title_placeholder"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:text="****   "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_last_four_numbers"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_title"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/payCardButton"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/paycardhoverbutton" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:background="@drawable/removehoverbutton" />

    </LinearLayout>

</LinearLayout>